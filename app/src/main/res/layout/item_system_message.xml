<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/auto_margin"
    android:paddingRight="@dimen/tab_height"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:id="@+id/message_top_line"
            android:layout_width="@dimen/grid_spacing"
            android:layout_height="@dimen/auto_margin"
            android:layout_gravity="center_horizontal"
            android:background="@color/divider_color" />

        <ImageView
            android:layout_width="@dimen/fab_margin"
            android:layout_height="@dimen/fab_margin"
            android:src="@drawable/circle_point"/>

        <View
            android:layout_width="@dimen/grid_spacing"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/divider_color" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginLeft="@dimen/half_tab_height"
        android:background="@drawable/message_bg"
        android:padding="@dimen/auto_margin"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_color"
            android:layout_marginLeft="@dimen/half_tab_height"
            android:text="2017-01-10 9:00-10:00"/>

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_time"
            android:textColor="@color/text_main_color"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginLeft="@dimen/half_tab_height"
            android:text="预约订单待确认"/>
    </RelativeLayout>
</LinearLayout>