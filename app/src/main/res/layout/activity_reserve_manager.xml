                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/manager_day_3"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:gravity="center"
                android:text="17"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/manager_day_4"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:gravity="center"
                android:text="18"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/manager_day_5"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:gravity="center"
                android:text="19"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/manager_day_6"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:gravity="center"
                android:text="20"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_middle" />

            <TextView
                android:id="@+id/manager_day_7"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:gravity="center"
                android:text="21"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>

