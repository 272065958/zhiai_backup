<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/bigger_margin"
    android:paddingRight="@dimen/bigger_margin">

    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="08:00-09:00"
        android:textColor="@color/text_main_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/delete_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/red_frament_bg"
        android:paddingBottom="@dimen/block_line_height"
        android:paddingLeft="@dimen/auto_margin"
        android:paddingRight="@dimen/auto_margin"
        android:paddingTop="@dimen/block_line_height"
        android:text="@string/button_delete"
        android:textColor="@android:color/white" />

</RelativeLayout>