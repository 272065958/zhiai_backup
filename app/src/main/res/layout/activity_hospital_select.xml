<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/toolbar_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_main_color"
        android:textSize="@dimen/text_size_middle"
        android:padding="@dimen/auto_margin"
        android:text="@string/register_hospital_position"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@drawable/item_pressed_bg"
        android:paddingLeft="@dimen/auto_margin"
        android:paddingRight="@dimen/auto_margin"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/bigger_margin"
            android:layout_height="wrap_content"
            android:src="@drawable/find_doctor_position"/>

        <TextView
            android:id="@+id/hospital_position"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_marginLeft="@dimen/auto_margin"
            android:textColor="@color/colorPrimary"
            android:text="广州市"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_marginLeft="@dimen/auto_margin"
            android:textColor="@color/text_main_color"
            android:text="@string/register_hospital_position_select"/>
    </LinearLayout>

    <include layout="@layout/item_list_view" />
</LinearLayout>