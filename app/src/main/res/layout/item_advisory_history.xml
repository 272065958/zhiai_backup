<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/auto_margin"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    android:paddingTop="@dimen/auto_margin">

    <TextView
        android:id="@+id/advisory_doctor_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:text="医生："
        android:textColor="@color/text_deep_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/advisory_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/advisory_doctor_tip"
        android:text="陈道品"
        android:textColor="@color/text_deep_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/advisory_time_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advisory_doctor_tip"
        android:layout_marginBottom="@dimen/text_margin"
        android:text="时间："
        android:textColor="@color/text_deep_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/advisory_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advisory_doctor_tip"
        android:layout_toRightOf="@id/advisory_doctor_tip"
        android:text="2016-11-12 13:43"
        android:textColor="@color/text_deep_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/advisory_department_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advisory_time_tip"
        android:text="科室："
        android:textColor="@color/text_deep_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/advisory_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advisory_time_tip"
        android:layout_toRightOf="@id/advisory_doctor_tip"
        android:text="皮肤科"
        android:textColor="@color/text_deep_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/advisory_type_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advisory_department_tip"
        android:layout_marginTop="@dimen/text_margin"
        android:text="方式："
        android:textColor="@color/text_deep_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/advisory_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advisory_department_tip"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_toRightOf="@id/advisory_doctor_tip"
        android:text="视频咨询"
        android:textColor="@color/text_deep_color"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/advisory_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="已完成"
        android:textColor="@color/text_main_color"
        android:textSize="@dimen/text_size_middle"
        android:visibility="gone" />

    <TextView
        android:id="@+id/advisory_comment"
        android:layout_width="@dimen/refresh_hight"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/advisory_department_tip"
        android:background="@drawable/blue_frament_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/block_line_height"
        android:paddingTop="@dimen/block_line_height"
        android:text="评论"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/advisory_reply"
        android:layout_width="@dimen/refresh_hight"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/red_frament_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/block_line_height"
        android:paddingTop="@dimen/block_line_height"
        android:text="回复"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/advisory_praise"
        android:layout_width="@dimen/half_tab_height"
        android:layout_height="@dimen/half_tab_height"
        android:layout_alignParentRight="true"
        android:layout_below="@id/advisory_department_tip"
        android:src="@drawable/praise" />
</RelativeLayout>