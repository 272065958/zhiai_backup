<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="@dimen/fab_margin">

    <ImageView
        android:id="@+id/reserve_head"
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="@dimen/fab_margin"
        android:background="@color/shadow_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="@dimen/auto_margin"
        android:layout_toRightOf="@id/reserve_head"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reserve_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            android:gravity="center_vertical"
            android:text="媛媛"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/text_size_middle" />

        <ImageView
            android:id="@+id/reserve_sex"
            android:layout_width="@dimen/fab_margin"
            android:layout_height="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/auto_margin"
            android:src="@drawable/woman" />
    </LinearLayout>

    <TextView
        android:id="@+id/patient_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/fab_margin"
        android:text="已确认"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/patient_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reserve_head"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/auto_margin"
        android:text="预约时间：2016-12-20 13:00-14:00"
        android:textColor="@color/text_main_color"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/patient_resean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/patient_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_toLeftOf="@id/patient_update"
        android:text="患者属于过敏体质, 且容易上火"
        android:textColor="@color/text_main_color"
        android:textSize="@dimen/text_size_small" />

    <View
        android:id="@+id/image_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_spacing"
        android:layout_below="@id/patient_resean"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/divider_color" />
</RelativeLayout>
