<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/item_pressed_bg"
    android:padding="@dimen/auto_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/reserve_select"
        android:layout_width="@dimen/fab_margin"
        android:layout_height="@dimen/fab_margin"
        android:src="@drawable/select_icon"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/reserve_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/text_deep_color"
            android:text="2016-10-18"/>

        <TextView
            android:id="@+id/reserve_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/text_main_color"
            android:text="预约时间：上午 08:00-09:00"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/grid_spacing"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/auto_margin"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/reserve_time_more"
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:padding="@dimen/text_margin"
        android:gravity="center"
        android:background="@drawable/item_transparent_pressed_bg"
        android:text="更多时间"/>
</LinearLayout>