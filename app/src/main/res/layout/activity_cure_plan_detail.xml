<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/toolbar_view" />

    <TextView
        android:id="@+id/cure_plan_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:background="@android:color/white"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_deep_color"
        android:text="这里是呢绒"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cure_plan_doctor_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_deep_color"
                android:textSize="@dimen/text_size_middle"
                android:text="医生："/>

            <TextView
                android:id="@+id/cure_plan_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_deep_color"
                android:layout_toRightOf="@id/cure_plan_doctor_tip"
                android:textSize="@dimen/text_size_middle"
                android:layout_marginBottom="@dimen/block_line_height"
                android:text="皮肤科-陈道品"/>

            <TextView
                android:id="@+id/cure_plan_date_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main_color"
                android:layout_below="@id/cure_plan_doctor"
                android:textSize="@dimen/text_size_small"
                android:text="日期："/>

            <TextView
                android:id="@+id/cure_plan_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main_color"
                android:layout_toRightOf="@id/cure_plan_date_tip"
                android:layout_below="@id/cure_plan_doctor"
                android:textSize="@dimen/text_size_small"
                android:text="2016-12-07"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>