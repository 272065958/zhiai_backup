<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginLeft="@dimen/auto_margin"
        android:layout_marginRight="@dimen/auto_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:background="@drawable/list_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/auto_margin">

        <TextView
            android:id="@+id/medicine_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、位元堂（天河城百货东圃店）"
            android:textColor="@color/text_deep_color"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/fab_margin"
                android:layout_height="@dimen/fab_margin"
                android:src="@drawable/find_doctor_position" />

            <TextView
                android:id="@+id/medicine_room_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin"
                android:text="中山大道中437号天河城百货"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>