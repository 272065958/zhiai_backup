<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_divider"
    android:orientation="vertical">

    <include layout="@layout/toolbar_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@drawable/item_pressed_bg"
        android:onClick="onClick"
        android:paddingBottom="@dimen/auto_margin"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:paddingTop="@dimen/auto_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/setting_login_phone"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/setting_phone_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_frament_bg"
            android:onClick="onClick"
            android:paddingBottom="@dimen/block_line_height"
            android:paddingLeft="@dimen/auto_margin"
            android:paddingRight="@dimen/auto_margin"
            android:paddingTop="@dimen/block_line_height"
            android:text="@string/button_update"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/auto_margin"
            android:layout_toLeftOf="@id/setting_phone_update"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/text_size_middle" />

    </RelativeLayout>

    <include layout="@layout/divider_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_pressed_bg"
        android:onClick="onClick"
        android:paddingBottom="@dimen/auto_margin"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:paddingTop="@dimen/auto_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/setting_login_password"
            android:textColor="@color/text_main_color"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/setting_password_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_frament_bg"
            android:onClick="onClick"
            android:paddingBottom="@dimen/block_line_height"
            android:paddingLeft="@dimen/auto_margin"
            android:paddingRight="@dimen/auto_margin"
            android:paddingTop="@dimen/block_line_height"
            android:text="@string/button_update"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_middle" />

    </RelativeLayout>

</LinearLayout>