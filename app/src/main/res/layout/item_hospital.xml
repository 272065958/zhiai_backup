<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginLeft="@dimen/auto_margin"
        android:layout_marginRight="@dimen/auto_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:background="@drawable/list_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/auto_margin">

        <ImageView
            android:id="@+id/hospital_icon"
            android:layout_width="@dimen/refresh_hight"
            android:layout_height="@dimen/refresh_hight"
            android:layout_marginLeft="@dimen/auto_margin"
            android:src="@drawable/test_7" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广东省中医院"
                android:textColor="@color/text_deep_color"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/hospital_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/block_line_height"
                android:text="三级甲等医院"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/block_line_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/fab_margin"
                    android:layout_height="@dimen/fab_margin"
                    android:src="@drawable/find_doctor_position" />

                <TextView
                    android:id="@+id/hospital_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:text="广州市大德路111号"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hospital_tel_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/block_line_height"
                android:paddingTop="@dimen/block_line_height">

                <ImageView
                    android:layout_width="@dimen/fab_margin"
                    android:layout_height="@dimen/fab_margin"
                    android:src="@drawable/find_doctor_phone" />

                <TextView
                    android:id="@+id/hospital_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:text="202-8887233"
                    android:textColor="@color/text_main_color"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>