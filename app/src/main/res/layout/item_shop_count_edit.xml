<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/count_minus"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@drawable/gray_btn"
        android:gravity="center"
        android:text="-" />

    <TextView
        android:id="@+id/count_view"
        android:layout_width="@dimen/tab_height"
        android:layout_height="@dimen/icon_size"
        android:layout_marginLeft="@dimen/f_grid_space"
        android:layout_marginRight="@dimen/f_grid_space"
        android:background="@drawable/gray_btn_nor"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/text_main_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/count_add"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@drawable/gray_btn"
        android:gravity="center"
        android:text="+" />
</LinearLayout>